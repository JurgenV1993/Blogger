@model IEnumerable<Blogger.Web1.Models.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Kategoria";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categories.FirstOrDefault().CategoryName)
            </td>
            <td>
                @*<img src="@("~/image/" + item.PhotoId +"PNG" )" asp-append-version="true" width="250px" height="250px" />*@
                <img src="@Url.Content("~/image/" + item.PhotoId )" width="250px"  height="250px" />
            </td>
        </tr>
        }
    </tbody>
</table>
